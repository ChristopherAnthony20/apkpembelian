<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvHargaaa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Total Harga :"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvHargaTotalll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Belum ada nama "
                    android:textColor="#FFFFFF" />

            </TableRow>

            <ImageView
                android:id="@+id/image7"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/citato" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >

                <TextView
                    android:id="@+id/tvItem7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Belum ada nama "
                    android:textColor="#FFFFFF" />


                <Button
                    android:id="@+id/btnMinus7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="-" />

                <TextView
                    android:id="@+id/tvJumlah7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnAdd7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="+" />

            </TableRow>

            <ImageView
                android:id="@+id/image8"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/chuba" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >

                <TextView
                    android:id="@+id/tvItem8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Belum ada nama "
                    android:textColor="#FFFFFF" />


                <Button
                    android:id="@+id/btnMinus8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="-" />

                <TextView
                    android:id="@+id/tvJumlah8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnAdd8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="+" />

            </TableRow>

            <ImageView
                android:id="@+id/image9"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/chokichoki" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >

                <TextView
                    android:id="@+id/tvItem9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Belum ada nama "
                    android:textColor="#FFFFFF" />


                <Button
                    android:id="@+id/btnMinus9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="-" />

                <TextView
                    android:id="@+id/tvJumlah9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnAdd9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="+" />

            </TableRow>


        <Button
            android:id="@+id/btnPesanannn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="My Order" />

        <Button
            android:id="@+id/btnOrderMore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Order More" />


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>